{% extends "base.html.twig" %}

{% block head %}
    {{ parent() }}

    <title>{{project.name}}-Bamboo</title>
    <link rel= "stylesheet" href= "/assets/styles/home.css"/>
    <link rel= "stylesheet" href= "/assets/styles/rightbar.css"/>
    <link rel= "stylesheet" href= "/assets/styles/tasks.css"/>
{% endblock %}
{% block content %}

    <ul class="errors">
        {% for errorTag in errors %}
            {% for error in errorTag %}
                <li>{{error}}</li>
            {% endfor %}
        {% endfor %}
    </ul>
    <form action="/projects/update/{{project.id}}" method="POST" id="update">
        <div>
            {{formProject.name.label}} : {{helpers.GetField.getFieldFilter(formProject.name)|raw}}
        </div>
        <div>
            {{formProject.description.label}} : 
        </div>
        <div>
            {{helpers.GetField.getFieldFilter(formProject.description)|raw}}
        </div>
        <div style="clear:both;"></div>
        <br>
        <input type="submit" name="submit" value="Envoyer" >
    </form>
{% endblock %}